{
  "repositoryUrl": "https://github.com/trustvc/w3c.git",
  "branches": [
    {
      "name": "main",
      "release": true
    },
    {
      "name": "alpha",
      "prerelease": "alpha"
    },
    {
      "name": "beta",
      "prerelease": "beta"
    }
  ],
  "github": true,
  "changelog": true,
  "npm": true,
  "outputPath": "${PROJECT_DIR}/dist",
  "buildTarget": "${PROJECT_NAME}:build",
  "tagFormat": "${PROJECT_NAME}@${VERSION}",
  "plugins": [
    [
      "@semantic-release/npm",
      {
        "npmPublish": true,
        "pkgRoot": "${PROJECT_DIR}"
      }
    ]
  ]
}
