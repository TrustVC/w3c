{
  "name": "w3c-issuer",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/w3c-issuer/src",
  "projectType": "library",
  "release": {
    "version": {
      "generatorOptions": {
        "packageRoot": "dist/{projectRoot}",
        "currentVersionResolver": "git-tag"
      }
    }
  },
  "tags": [],
  "targets": {
    "build-tsc": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/w3c-issuer",
        "main": "packages/w3c-issuer/src/index.ts",
        "tsConfig": "packages/w3c-issuer/tsconfig.lib.json",
        "assets": ["packages/w3c-issuer/*.md"]
      }
    },
    "build-vite": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "dependsOn": ["^build"],
      "options": {
        "outputPath": "dist/packages/w3c-issuer",
        "main": "packages/w3c-issuer/src/index.ts",
        "tsConfig": "packages/w3c-issuer/tsconfig.lib.json",
        "assets": ["packages/w3c-issuer/*.md"],
        "external": ["@tradetrust-tt/w3c-utils"]
      }
    },
    
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "dependsOn": ["^build"],
      "options": {
        "outputPath": "dist",
        "main": "packages/w3c-issuer/src/index.ts",
        "bundle": false,
        "tsConfig": "packages/w3c-issuer/tsconfig.lib.json",
        "assets": ["packages/w3c-issuer/*.md"],
        "format": ["esm"],
        "external": ["@tradetrust-tt/w3c-utils"],
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        }
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    }
  }
}
