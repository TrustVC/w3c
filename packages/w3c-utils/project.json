{
  "name": "w3c-utils",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/w3c-utils/src",
  "projectType": "library",
  "release": {
    "version": {
      "generatorOptions": {
        "packageRoot": "dist/{projectRoot}",
        "currentVersionResolver": "git-tag"
      }
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "dependsOn": ["^build"],
      "options": {
        "outputPath": "dist",
        "main": "packages/w3c-utils/src/index.ts",
        "tsConfig": "packages/w3c-utils/tsconfig.lib.json",
        "assets": ["packages/w3c-utils/*.md"],
        "format": ["cjs"],
        "external": ["@tradetrust-tt/w3c-utils"]
      }
    },
    "build-vite": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/w3c-utils",
        "main": "packages/w3c-utils/src/index.ts",
        "tsConfig": "packages/w3c-utils/tsconfig.lib.json",
        "assets": ["packages/w3c-utils/*.md"]
      }
    }
  }
}
