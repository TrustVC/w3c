{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "CommonJS",
    "baseUrl": ".",
    "paths": {
      "@/tradetrust-tt/w3c-utils": ["packages/w3c-utils/src"],
      "@tradetrust-tt/w3c-issuer": ["packages/w3c-issuer/src"],
      "@tradetrust-tt/w3c-vc": ["packages/w3c-vc/src/"]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "outDir": "./build",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "alwaysStrict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "build", "tmp"]
}
