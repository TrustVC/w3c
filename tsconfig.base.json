{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@tradetrust-tt/w3c-utils": ["packages/w3c-utils/src"],
      "@tradetrust-tt/w3c-issuer": ["packages/w3c-issuer/src"]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "outDir": "./build",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "sourceMap": true,
    "moduleResolution": "node",
    "skipDefaultLibCheck": true
  },
  "exclude": ["node_modules", "dist", "build", "tmp"]
}
