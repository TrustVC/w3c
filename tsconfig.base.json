{
  "compilerOptions": {
    "target": "ESNext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "CommonJS",
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@tradetrust-tt/w3c-credential-status": ["./packages/w3c-credential-status/src"],
      "@tradetrust-tt/w3c-issuer": ["./packages/w3c-issuer/src"],
      "@tradetrust-tt/w3c-vc": ["./packages/w3c-vc/src"],
      "@tradetrust-tt/w3c-vc/*": ["./packages/w3c-vc/src/*"]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "build", "tmp"]
}
