{
  "extends": "../../tsconfig.base.json",
  "files": [],
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "types": ["node", "vite/client"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": false
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "target": "ES2018",
      "esModuleInterop": true,
    },
    "transpileOnly": true,
    "ignore": [
      "(?:^|/)node_modules/",
      "(?:^|/)tests/",
      "\\.test\\.ts$"
    ]
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "dist"]
}
