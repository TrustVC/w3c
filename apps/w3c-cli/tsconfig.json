{
  "extends": "../../tsconfig.base.json",
  "files": [],
  "compilerOptions": {
    "module": "ESNext",
    "types": ["node", "vite/client"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": false
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    },
    "ignore": [
      "(?:^|/)node_modules/",
      "(?:^|/)tests/"
    ]
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "dist"]
}
