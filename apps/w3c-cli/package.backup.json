{
  "name": "w3c-cli",
  "version": "1.0.0",
  "main": "dist/cjs/main.js",
  "types": "dist/types/main.d.ts",
  
  "scripts": {
    "test": "npx vitest --run",
    "lint": "npx eslint . --color --format=table --max-warnings=0",
    "start": "node dist/cjs/main.js",
    "dev": "ts-node src/main.ts",
    "cli": "node dist/main.js",
    "build-tsc": "nx run w3c-cli:clean && nx run w3c-cli:build:cjs && nx run w3c-cli:build:type",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs --project ./tsconfig.build.json",
    "build:type": "tsc -d --emitDeclarationOnly --outDir dist/types",
    "serve": "nx run w3c-cli:build && node dist/cjs/main.js",
    "clean": "rm -rf dist/",
    "pkg": "npx pkg ./package.json --out-path dist/@w3c-cli"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@tradetrust-tt/w3c-issuer": "file:../../dist/packages/w3c-issuer/index.js",
    "@types/yargs": "^17.0.32",
    "chalk": "^4.1.2",
    "inquirer": "^10.0.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "jsdom": "^24.1.1",
    "pkg": "^5.8.1",
    "ts-node": "^10.9.2"
  }
}
